!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %title= "RemoteLogger: #{(yield :head_title) || (yield :page_title)}"
    = stylesheet_link_tag 'http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css', 'http://yui.yahooapis.com/2.7.0/build/base/base-min.css'
    
  %body
    #doc4
      #hd
        - if logged_in?
          = link_to 'Dashboard', dashboard_path
          = link_to 'Applications', my_applications_path
          = link_to 'Account', my_account_path
          = link_to 'Logout', logout_path, :method => :delete
        - else
          = link_to 'Login', login_path
          = link_to 'Register', register_path
          
        #bread_crumbs
          = render :partial => '/layouts/bread_crumbs'
        
        %h3= "#{yield :page_title}"
        
        - if flash_messages?
          #messages
            = flash_messages
      #bd
        = yield
      #ft